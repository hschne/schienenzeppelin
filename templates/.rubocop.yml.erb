AllCops:
  NewCops: enable

Naming/AccessorMethodName:
  Enabled: false

Metrics/MethodLength:
  CountAsOne: ['array', 'heredoc']
  IgnoredMethods: ['describe', 'context']

Metrics/BlockLength:
  IgnoredMethods: ['describe', 'context']
  Exclude: ['**/*.rake']

Layout/LineLength:
  Max: 120

Layout/MultilineMethodCallIndentation:
  EnforcedStyle: indented

Style/BlockDelimiters:
  Exclude:
    - spec/**/*

Style/Documentation:
  Enabled: false
